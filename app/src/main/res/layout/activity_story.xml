<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options.StoryAndChallenge.Story.Story">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ff3c00">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="current chracter"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#ffff"
            android:layout_gravity="center"

            />
        <ImageView
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/moon"
            android:scaleType="fitXY"
            />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#5adddddd"
            />
        <TextView
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Points :"
            android:layout_gravity="center"
            android:textColor="#ffff"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:textColor="#ffff"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="0 Moonos"
            android:layout_height="wrap_content"
            android:id="@+id/player_points"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/space"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                />
            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/moono"
                android:textColor="#ffffff"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="15dp"
                />

        </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Story Number 1"
        android:textAllCaps="false"
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        android:text="Story Number 2"
        android:textAllCaps="false"
        android:id="@+id/button2" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Story Number 3"
            android:id="@+id/button3"
            android:textAllCaps="false"
            android:layout_gravity="right"
           />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 4"
                android:textAllCaps="false"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 5"
                android:textAllCaps="false"
                android:id="@+id/button5" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 6"
                android:id="@+id/button6"
                android:textAllCaps="false"
                android:layout_gravity="right"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 7"
                android:textAllCaps="false"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal" />


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 8"
                android:textAllCaps="false"
                android:id="@+id/button8" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 9"
                android:id="@+id/button9"
                android:textAllCaps="false"
                android:layout_gravity="right"
                />
        </LinearLayout>


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Story Number 10"
                android:textAllCaps="false"
                android:id="@+id/button10"
                android:layout_gravity="center_horizontal" />



    </LinearLayout>

</LinearLayout>
